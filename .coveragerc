[run]
source = refrakt_xai
omit = 
    */tests/*
    */test_*
    */__pycache__/*
    */migrations/*
    */venv/*
    */.venv/*
    */env/*
    */.env/*
    */site-packages/*
    */dist-packages/*
    */build/*
    */dist/*
    */.pytest_cache/*
    */.mypy_cache/*
    */.ruff_cache/*
    */refrakt_xai.egg-info/*

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod
    # type: ignore
    # noqa
    # fmt: off
    # fmt: on

precision = 2
show_missing = True
skip_covered = False

[html]
directory = htmlcov
title = Refrakt XAI Coverage Report

[xml]
output = coverage.xml 